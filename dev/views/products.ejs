<%- include('partials/header') %>
<!-- component -->
<div class="container mx-auto px-5 bg-white">
  <div class="flex lg:flex-row flex-col-reverse shadow-lg">
    <!-- left section -->
    <div class="w-full min-h-screen shadow-lg">
      <!-- header -->

      <div class="flex flex-row justify-between items-center px-5 mt-5">
        <div class="text-gray-800">
          <div class="font-bold text-xl">Products</div>
          <span class="text-xs">1300 Total</span>
        </div>
        <div class="flex items-center">
          <div class="text-sm text-center mr-4">
            <div class="font-light text-gray-500">Current User</div>
            <span class="font-semibold">Temitope</span>
          </div>
          <div>
            <span
              class="px-4 py-2 bg-gray-200 text-gray-800 font-semibold rounded"
              >Logout</span
            >
          </div>
        </div>
      </div>
      <!-- end header -->
      <!-- categories -->

      <div
        class="mt-5 flex flex-row px-5"
        style="display: flex; justify-content: space-between"
      >
        <span
          style="
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
          "
        >
          <span>
            <span
              class="px-5 py-1 bg-[#6653af] cursor-pointer rounded-2xl text-white text-sm mr-4"
            >
              All
            </span>
            <% data.category.forEach(function(c) { %>
            <a href="/app/products?Category=<%=c.Name%>">
              <span
                class="px-5 py-1 border-[#6653af] border cursor-pointer rounded-2xl text-sm font-semibold mr-4"
              >
                <%=c.Name%>
              </span>
            </a>
            <% }) %>
          </span>
          <span> </span>
        </span>
      </div>
      <!-- end categories -->
      <!-- products -->
      <div
        class="grid grid-cols-3 gap-4 px-5 mt-5 overflow-y-auto scrollbar-track-transparent h-3/4"
      >
        <% data.products.forEach(function(p) { %>

          <a class="px-3 items-center py-3 flex flex-row border shadow-md border-gray-200 rounded-md h-32 justify-between" href="/app/addProduct?id=<%= p.id %>">

            <div>

            <div>
                <div class="font-bold text-gray-800"><%= p.Name %></div>
                <span class="font-bold text-xl text-gray-900"><%= p.Stock %></span>
                <!-- <span class="font-bold text-xl text-gray-900"><%= p.Stock %></span> -->
              </div>
              <div class="flex flex-row justify-between items-center">
                <span class="self-end font-bold text-lg text-gray-500 amount"
                  ><%= p.Price %></span
                >
                <!-- <img src="" class=" h-14 w-14 object-cover rounded-md" alt=""> -->
              </div>
          </div>
          <img src="/images/bar.png" class="w-16 h-16 rounded-full"/>


          </a>
        
        <% }) %>
      </div>
      <!-- end products -->
    </div>

    <!-- end left section -->
  </div>
</div>
<%- include('partials/footer') %>
