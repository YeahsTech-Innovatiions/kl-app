<div>
    <h1 class="text-[20px] p-3 bg-blue-100 rounded-lg  text-black px-4 text-bold">Bar Sales</h1>

</div>
<div class="flex flex-col md:flex-row gap-4 direction-reverse" style="flex-direction: column-reverse;">
    <div class="md:w-full">
        <div class="bg-white rounded-lg shadow-md p-6 mb-4">
            <table class="w-full smart_table" id="table">
                <thead>
                    <tr>
                        <th class="text-left font-semibold">Product</th>
                        <th class="text-left font-semibold">Total</th>
                        <th class="text-left font-semibold">Table</th>
                    </tr>

                </thead>

                <tbody>
                    
                    <%
                    let totalItemSales = 0
                    data.bar_sales.forEach(function(s) {
                        totalItemSales+=s.Total

                        %>
                        <tr data-href="/app/sale?`Table`=<%=s.Table%>&Server=<%=s.Server%>">
                        <td class="py-4">
                            <div class="flex items-center">
                                <img class="w-8 mr-4 rounded-full" src="/images/<%=s.Cid%>.png" alt="Product image">
                                <span class="font-semibold flex-col flex">
                                <span class="font-semibold"><%=s.Name%></span>
                                </span>
                            </div>
                        </td>
                        <td class="py-4 amount"><%=s.Total%></td>
                        <td class="py-4 "><%=s.Table%> <br> <%= s.date_created.toLocaleDateString('en-US',{ weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' })%><br> <%=s.Server%> 
                               <span style="color: <%= s.Status == 'CLEARED' ? 'green': 'red'  %>">
                                <%=s.Status%> 
                               </span> 
                        
                        </td>
                        </tr>
                   
                    <% }) %>

                    </tbody>
            </table>
        </div>
    </div>

        
    <div class="md:w-full">
        <div class="bg-white rounded-lg shadow-md p-6" style="
    display: flex;
    justify-content: space-between;
    align-items: center;
">
                
                <div class="flex justify-between mb-2">
                    <span>Sales</span>
                    <span  class="ml-4 font-bold"><%=data.bar_sales.length%></span>
                </div>
                
                
                <hr class="my-2">
                <div class="flex justify-between mb-2">
                    <span class="font-semibold">Payment Received</span>
                    <span  class="ml-4 font-bold"><%=totalItemSales%></span>
                </div>
                <button onclick="printPage()" class="bg-blue-500 text-white py-2 px-4 rounded-lg mt-0 w-35">Print</button>
            </div>
    </div>
</div>