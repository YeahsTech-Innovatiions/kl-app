<div>
    <h1 class="text-[20px] p-3 bg-blue-100 rounded-lg  text-black px-4 text-bold">Premium Sales</h1>

</div>
<div class="flex flex-col md:flex-row gap-4">
    <div class="md:w-3/4">
        <div class="bg-white rounded-lg shadow-md p-6 mb-4">
            <table class="w-full smart_table" id="table">
                <thead>
                    <tr>
                        <th class="text-left font-semibold">Product</th>
                        <th class="text-left font-semibold" style="display: none">Time</th>
                        <th class="text-left font-semibold">Table</th>
                        <th class="text-left font-semibold">Server</th>
                        <th class="text-left font-semibold">Total</th>
                        <th class="text-left font-semibold text-right">Status</th>
                    </tr>

                </thead>

                <tbody>
                    
                    <%
                    let totalItemSales = 0
                    data.premium_sales.forEach(function(s) {
                        totalItemSales+=s.Total
                        %>
                        <tr data-href="/app/sale?`Table`=<%=s.Table%>&Server=<%=s.Server%>">
                        <td class="py-4">
                            <div class="flex items-center">
                                <img class="w-8 mr-4 rounded-full" src="/images/<%=s.Cid%>.png" alt="Product image">
                                <span class="font-semibold flex-col flex">
                                <span class="font-semibold"><%=s.Name%></span>
                                </span>
                            </div>
                        </td>
                        <td class="py-4 " style="display: none"><%=s.date_created%></td>
                        <td class="py-4 "><%=s.Table%> <br> <%= s.date_created.toLocaleDateString('en-US',{ weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' })%></td>
                        <td class="py-4 ">
                          <a href="/app/sale?`Table`=<%=s.Table%>&Server=<%=s.Server%>"><%=s.Server%></a></td>
                        <td class="py-4 amount"><%=s.Total%></td>

                          <td class="py-4 text-[15px] text-right"><%=s.Status%></td>
                        
                        </tr>
                   
                    <% }) %>

                    </tbody>
            </table>
        </div>
    </div>
    <div class="md:w-1/4">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-lg font-semibold mb-4">Report</h2>
                <div class="flex justify-between mb-2">
                    <span>Sales</span>
                    <span><%=data.premium_sales.length%></span>
                </div>
                <div class="flex justify-between mb-2">
                    <!-- <span>Tables Served</span> -->
                </div>
                
                <hr class="my-2">
                <div class="flex justify-between mb-2">
                    <span class="font-semibold">All Payment Received</span>
                    <span><%=totalItemSales%></span>
                </div>
                <button onclick="printPage()"  class="bg-blue-500 text-white py-2 px-4 rounded-lg mt-4 w-full">Print</button>
            </div>
    </div>
</div>