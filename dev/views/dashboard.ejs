        <script>
          // Retrieve the array from localStorage
          let openTables = localStorage.getItem("openTables");
          openTables = JSON.parse(openTables) || [];

          function openTable(num) {
            const random = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
            let randomLetter = random.charAt(
              Math.floor(Math.random() * random.length)
            );
            let table = "Table" + num + randomLetter;
            if (openTables.includes(table)) {
              table += random.charAt(
                Math.floor(Math.random() * random.length)
              )
            alert(table)
            }
            openTables.push(table);
            localStorage.setItem("openTables", JSON.stringify(openTables));
            localStorage.setItem(table, "[]");
            window.location.reload()
          }

          function closeTable(num = null) {
            // alert(num);
            // let num = prompt("Table Number");
            const tableIndex = openTables.indexOf(num);
            // alert(tableIndex);
            if (tableIndex > -1) {
              localStorage.removeItem(num);
              openTables.splice(tableIndex, 1);
              localStorage.setItem("openTables", JSON.stringify(openTables));
              if(openTables.length <= 1){
                localStorage.removeItem('currentTable');
              }
              window.location.reload()
            }
          }

          function chooseTable(num = null) {
            // let num = prompt("Table Number");
            localStorage.setItem("currentTable", num);
            window.location.href = '/app/pos'
          }

          // Render each item to the HTML using jQuery
          const listContainer = $("#openTables");

          openTables.forEach((item) => {
            const listItem = $("<li id=" + item + " class='chooseTable'>").html(
              item
            );
            const closeItem = $("<li id=" + item + " class='closeTable'>").html(
              `X`
            );
            listContainer.append(listItem);
            listContainer.append(closeItem);
          });
          $(".closeTable").click(function () {
            var clickedBtnID = $(this).attr("id"); // or var clickedBtnID = this.id
            // alert("you clicked on button #" + clickedBtnID);
            closeTable(clickedBtnID);
          });
          
          $(".chooseTable").click(function () {
            var clickedBtnID = $(this).attr("id"); // or var clickedBtnID = this.id
            // alert("you clicked on button #" + clickedBtnID);
            chooseTable(clickedBtnID);
          });
